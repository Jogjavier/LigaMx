@model LigaMX.Models.LigaMx

<!DOCTYPE html>
<html>
<head>
    <title>Agregar Partido</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Agregar Nuevo Partido</h1>
        <form asp-action="Create" method="post" class="mt-4">
            <div class="mb-3">
                <label for="Partido" class="form-label">Nombre del Partido</label>
                <input type="text" class="form-control" id="Partido" name="Partido" required />
            </div>
            <div class="mb-3">
                <label for="Equipo1" class="form-label">Equipo 1</label>
                <input type="text" class="form-control" id="Equipo1" name="Equipo1" required />
            </div>
            <div class="mb-3">
                <label for="Equipo2" class="form-label">Equipo 2</label>
                <input type="text" class="form-control" id="Equipo2" name="Equipo2" required />
            </div>
            <div class="mb-3">
                <label for="Resultado" class="form-label">Resultado</label>
                <input type="text" class="form-control" id="Resultado" name="Resultado" />
            </div>
            <div class="mb-3">
                <label for="Estadio" class="form-label">Estadio</label>
                <input type="text" class="form-control" id="Estadio" name="Estadio" required />
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</body>
</html>

