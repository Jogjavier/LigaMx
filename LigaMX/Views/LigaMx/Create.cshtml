@model LigaMX.Models.LigaMx

<!DOCTYPE html>
<html>
<head>
    <title>Crear Nuevo Partido</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Agregar Nuevo Partido</h1>
        <form asp-action="Create" method="post" class="mt-4">
            <div class="mb-3">
                <label asp-for="Partido" class="form-label">Partido</label>
                <input asp-for="Partido" class="form-control" />
                <span asp-validation-for="Partido" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Equipo1" class="form-label">Equipo 1</label>
                <input asp-for="Equipo1" class="form-control" />
                <span asp-validation-for="Equipo1" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Equipo2" class="form-label">Equipo 2</label>
                <input asp-for="Equipo2" class="form-control" />
                <span asp-validation-for="Equipo2" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Resultado" class="form-label">Resultado</label>
                <input asp-for="Resultado" class="form-control" />
                <span asp-validation-for="Resultado" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Estadio" class="form-label">Estadio</label>
                <input asp-for="Estadio" class="form-control" />
                <span asp-validation-for="Estadio" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.11/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
