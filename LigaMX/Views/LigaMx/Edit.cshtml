@model LigaMX.Models.LigaMx

<!DOCTYPE html>
<html>
<head>
    <title>Editar Partido</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Editar Partido</h1>
        <form asp-action="Edit" method="post" class="mt-4">
            <input type="hidden" name="partido" value="@Model.Partido" />
            <div class="mb-3">
                <label for="Partido" class="form-label">Partido</label>
                <input type="text" class="form-control" id="Partido" name="Partido" value="@Model.Partido" required />
            </div>
            <div class="mb-3">
                <label for="Equipo1" class="form-label">Equipo 1</label>
                <input type="text" class="form-control" id="Equipo1" name="Equipo1" value="@Model.Equipo1" required />
            </div>
            <div class="mb-3">
                <label for="Equipo2" class="form-label">Equipo 2</label>
                <input type="text" class="form-control" id="Equipo2" name="Equipo2" value="@Model.Equipo2" required />
            </div>
            <div class="mb-3">
                <label for="Resultado" class="form-label">Resultado</label>
                <input type="text" class="form-control" id="Resultado" name="Resultado" value="@Model.Resultado" required />
            </div>
            <div class="mb-3">
                <label for="Estadio" class="form-label">Estadio</label>
                <input type="text" class="form-control" id="Estadio" name="Estadio" value="@Model.Estadio" required />
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</body>
</html>
